	zoomedImg.addEventListener('click', () => {
		hideZoomedImage(zoomedImg, overlayEl);
	});

	overlayEl.addEventListener('click', () => {
		hideZoomedImage(zoomedImg, overlayEl);
	});

	function setZoomedImageStyle(zoomedImgEl, styles){
			// 3 is a magical number test it
			// Styles for the image when zoomed
			Object.assign(zoomedImg.style, {
					position: 'absolute',
			    top: `${windowScrollPosition + Math.round(window.innerHeight / 3)}px`,
					left: '35%',
			    width: '35%',
			    maxHeight: '260px',
					display: 'block',
					transform: 'scale(1.41004) translate3d(0.00554061px, 16.511px, 0px)'
			});
	}

	function showZoomedImage(zoomedImgEl, overlayEl){
		const windowScrollPosition = document.documentElement.scrollTop;
		const imgEl = event.target;
		const imgSrc = imgEl.src;
		const {top} = imgEl.getBoundingClientRect();

		overlayEl.style.display = 'block';
		zoomedImg.src = imgSrc;
		if(window.innerWidth < 768){
			setZoomedImageStyle(zoomedImg, {});

		} else{
			setZoomedImageStyle(zoomedImg, {});

		}

		document.body.classList.add('medium-zoom--opened');
	}

	galleryImgContainer.addEventListener('click', (event) => {
