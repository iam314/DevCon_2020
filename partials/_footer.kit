	function hideZoomedImage(zoomedImgEl, overlayEl){
		document.body.classList.remove('medium-zoom--opened');
		overlayEl.style.display = 'none';
		zoomedImgEl.style.display = 'none';
	}

	function onWindowScroll(zoomedImgEl, overlayEl){
		console.log(zoomedImg.style.display)
		if(zoomedImg.style.display === 'block'){
			hideZoomedImage(zoomedImgEl, overlayEl);
		} else{
			return;
		}
	}

	const galleryImgContainer = document.querySelector('.gallery');
	const zoomedImg = document.querySelector('.zoomed-img');
	const overlayEl = document.querySelector('.medium-zoom-overlay');

	// TODO: Close zoomed img on window scroll.
